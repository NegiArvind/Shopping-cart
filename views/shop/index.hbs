<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{# if noMessage}} hidden {{/if}}>
      {{successMsg }}
    </div>
  </div>
</div>
<!--Iterating through each productChunks -->
{{# each products}}
  <div class="row">
    {{# each this}} <!-- this is a keyword of handlebars . it reference to current element of poducts array-->
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <img src="{{ this.imagePath}}" alt="..." class="img-responsive">
          <div class="caption">
            <h3>{{ this.title }}</h3>
            <p class="description">{{ this.description }}</p>
            <div>
              <div class="price pull-left">${{ this.price }}</div>
              <p><a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to cart</a></p>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/ each}}
